<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkmode_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bmiCalculator">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/BMIConstraintLayout"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
        android:id="@+id/calculatorBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkmode_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/obeseClassIII"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/cardAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="Obese Class III: More than 40"
            app:layout_constraintStart_toStartOf="@id/obeseClassIII"
            app:layout_constraintEnd_toEndOf="@id/obeseClassIII"
            app:layout_constraintTop_toTopOf="@id/obeseClassIII"
            app:layout_constraintBottom_toBottomOf="@id/obeseClassIII"/>


        <ImageView
            android:id="@+id/obeseClassII"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/obeseClassIII"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="Obese Class II: 35-40"
            app:layout_constraintStart_toStartOf="@id/obeseClassII"
            app:layout_constraintEnd_toEndOf="@id/obeseClassII"
            app:layout_constraintTop_toTopOf="@id/obeseClassII"
            app:layout_constraintBottom_toBottomOf="@id/obeseClassII"/>

        <ImageView
            android:id="@+id/obeseClassI"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/obeseClassII"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="Obese Class I: 30-35"
            app:layout_constraintStart_toStartOf="@id/obeseClassI"
            app:layout_constraintEnd_toEndOf="@id/obeseClassI"
            app:layout_constraintTop_toTopOf="@id/obeseClassI"
            app:layout_constraintBottom_toBottomOf="@id/obeseClassI"/>

        <ImageView
            android:id="@+id/overweightClass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/obeseClassI"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="Overweight: 25-30"
            app:layout_constraintStart_toStartOf="@id/overweightClass"
            app:layout_constraintEnd_toEndOf="@id/overweightClass"
            app:layout_constraintTop_toTopOf="@id/overweightClass"
            app:layout_constraintBottom_toBottomOf="@id/overweightClass"/>

        <ImageView
            android:id="@+id/healthyClass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/overweightClass"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="Healthy: 18.5-25"
            app:layout_constraintStart_toStartOf="@id/healthyClass"
            app:layout_constraintEnd_toEndOf="@id/healthyClass"
            app:layout_constraintTop_toTopOf="@id/healthyClass"
            app:layout_constraintBottom_toBottomOf="@id/healthyClass"/>


        <ImageView
            android:id="@+id/underweightClass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/healthyClass"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:text="Underweight: Less than 18.5"
            app:layout_constraintStart_toStartOf="@id/underweightClass"
            app:layout_constraintEnd_toEndOf="@id/underweightClass"
            app:layout_constraintTop_toTopOf="@id/underweightClass"
            app:layout_constraintBottom_toBottomOf="@id/underweightClass"/>

        <EditText
            android:id="@+id/calcHeightInput"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input_field_background"
            android:backgroundTint="@color/cardAccent"
            android:inputType="number"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@id/calculateButton"
            app:layout_constraintBottom_toTopOf="@id/calculateButton"
             />

        <TextView
            android:id="@+id/calcHeightInputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Height (cm)"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@id/calcHeightInput"
            app:layout_constraintEnd_toEndOf="@id/calcHeightInput"
            app:layout_constraintBottom_toTopOf="@id/calcHeightInput"
            />

        <EditText
            android:id="@+id/calcWeightInput"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input_field_background"
            android:backgroundTint="@color/cardAccent"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="@id/calculateButton"
            app:layout_constraintBottom_toTopOf="@id/calculateButton"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Weight (kg)"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@id/calcWeightInput"
            app:layout_constraintEnd_toEndOf="@id/calcWeightInput"
            app:layout_constraintBottom_toTopOf="@id/calcWeightInput"
            />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="Calculate"
            android:background="@drawable/login_register_button_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/underweightClass"
            />

        <ImageView
            android:id="@+id/calculatorCircle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/white_circle"
            android:backgroundTint="@color/navBarColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bmiCalculatorTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/calcHeightInputText"
            />

        <TextView
            android:id="@+id/bmiCalculatorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI Calculator"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/BMICircleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="..."
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="@id/calculatorCircle"
            app:layout_constraintBottom_toBottomOf="@id/calculatorCircle"
            app:layout_constraintStart_toStartOf="@id/calculatorCircle"
            app:layout_constraintEnd_toEndOf="@id/calculatorCircle"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>